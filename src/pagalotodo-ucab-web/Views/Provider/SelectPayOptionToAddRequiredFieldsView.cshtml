@{
    ViewData["Tittle"] = "AdminServices Page";
    Layout = "~/Views/Shared/_ProviderLayout.cshtml";
}
@model IEnumerable<AllPaymentOptionsModel>

<h1>Listado de Opciones de Pago</h1>

<style>
    .user-table {
        border-collapse: collapse;
    }

        .user-table th, .user-table td {
            padding: 10px;
            border: 1px solid #ccc;
        }
</style>

<table class="user-table">
    <thead>
        <tr>
            <th>Nombre Opcion</th>
            <th>Estado</th>
            <th>Configurar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var option in Model)
        {
            <tr>
                <td>@option.PaymentOptionName</td>
                <td>@option.Status</td>
                <td>
                    <div>
                        <a href="/PaymentOption/AddRequiredFieldsView?_PaymentOptionId=@option.PaymentOptionId">Configurar Campos</a>
                    </div>
                    <form action="/PaymentOption/AddRequiredFieldsView" method="get">
                        <input type="hidden" name="_PaymentOptionId" value="@option.PaymentOptionId" />
                        <button type="submit" asp-route-id="@option.PaymentOptionId">Configurar Campos</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>